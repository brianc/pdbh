require 'sinatra'
class App < Sinatra::Default
  helpers do
    def script(*paths)
      paths.map { |path| "<script type='text/javascript' src='#{path}'></script>" }.join
    end
    
    def render_folders(folders=Dir.dirname(__FILE__)+"/public/audio")
      
    end
  end
  get "/" do
    haml :index
  end
end
